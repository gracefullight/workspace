{
  "name": "@gracefullight/validate-branch",
  "version": "1.0.0",
  "description": "Git branch name validation tool with custom regexp support",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "validate-branch": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/cli.ts",
    "test": "vitest",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src"
  },
  "keywords": [
    "git",
    "branch",
    "validation",
    "cli"
  ],
  "author": {
    "name": "Eunkwang Shin",
    "email": "gracefullight.dev@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/gracefullight/workspace/packages/validate-branch"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^24.10.4",
    "tsup": "^8.5.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.7"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^12.1.0",
    "isomorphic-git": "^1.30.1"
  }
}
